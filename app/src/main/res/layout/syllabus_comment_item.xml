<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dp" >

        <ImageView
            android:id="@+id/syllabus_comment_item_img"
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8.0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_start" />

        <ImageView
            android:id="@+id/headphoto"
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8.0dp"
            android:src="@drawable/rc_white" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张亚龙"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/syllabus_comment_item_img"
            android:textColor="#959595"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sendtime"
            android:text="2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="#959595"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headphoto"
            android:layout_marginTop="7.0dp"
            android:text="今天天气真好"
            android:layout_toRightOf="@id/syllabus_comment_item_img"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/syllabus_comment_item_editview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2" >

            <TextView
                android:id="@+id/syllabus_comment_item_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1.0dp"
                android:layout_weight="1"
                android:background="#80000000"
                android:padding="2.5dp"
                android:text="复制"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/syllabus_comment_item_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.0dp"
                android:layout_weight="1"
                android:background="#80000000"
                android:padding="2.5dp"
                android:text="删除"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3" />

</LinearLayout>