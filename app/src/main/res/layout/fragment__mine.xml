<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bibi.com.babayonlie.activity.Fragment_Mine">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="我的"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"/>
    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/holo_orange_dark"
        >
        <ImageView
            android:id="@+id/headphoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_launcher"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="未登录"
            android:textSize="20sp"
            android:layout_below="@id/headphoto"
            android:gravity="center"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="登录之后享受更多功能"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_below="@id/username"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#d9d9d9"/>
    <RelativeLayout
        android:id="@+id/minedata"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mine_data"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人资料"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_toRightOf="@id/iv1"
            />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"

            android:layout_marginRight="10dp"
            android:src="@drawable/home_rightarrow"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#d9d9d9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mine_set"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="系统设置"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_toRightOf="@id/iv3"
            />
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"

            android:layout_marginRight="10dp"
            android:src="@drawable/home_rightarrow"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>
