<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<include layout="@layout/tittlebar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="周日"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="周一"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="周二"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="周三"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="周四"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="周五"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="周六"
            android:gravity="center"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <include
        android:id="@+id/week1"
        layout="@layout/item_week"/>
    <include
        android:id="@+id/week2"
        layout="@layout/item_week"/>
    <include
        android:id="@+id/week3"
        layout="@layout/item_week"/>
    <include
        android:id="@+id/week4"
        layout="@layout/item_week"/>
    <include
        android:id="@+id/week5"
        layout="@layout/item_week"/>
    <include
        android:id="@+id/week6"
        layout="@layout/item_week"/>
</LinearLayout>
